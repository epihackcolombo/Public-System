<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mobuzz_ash"
    android:gravity="top"
    tools:context=".UiProfileRegister" >
    
   	<TableRow
	    android:id="@+id/tblr_topmenu"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/bg_top_menu"
	    android:gravity="center" >
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="75dp"
	        android:src="@drawable/logo_header_profile_registration" />
	</TableRow>

    <ScrollView
        android:id="@+id/ts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tblr_topmenu" >

        <LinearLayout
            android:id="@+id/lnrlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingBottom="35dp"
            android:paddingTop="35dp" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp" >

                <TableRow
                    android:id="@+id/tbl_row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ .:"
                        android:ems="10"
                        android:hint="firstname lastname"
                        android:inputType="textPersonName"
                        android:maxLength="100"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/TableRow00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnEqual"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 ,.:;?%/\|@$*+-_#"
                        android:ems="10"
                        android:hint="email"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tbl_raw3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_contactno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:digits="0123456789"
                        android:ems="10"
                        android:hint="preferred contact number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="18dp" >

                        <requestFocus />
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/but_residence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/xml_button_spinner"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:text="residence"
                        android:textColor="@color/hint_holo_light"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/but_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/xml_button_spinner"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:text="preferred language"
                        android:textColor="@color/hint_holo_light"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/but_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/xml_button_spinner"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:text="gender"
                        android:textColor="@color/hint_holo_light"
                        android:textSize="18dp" />
                    
                    <EditText
                        android:id="@+id/edt_age"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnEqual"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ems="10"
                        android:hint="age in years"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="18dp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp" >

                <TableRow
                    android:id="@+id/tblr_colorcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ellipsize="end"
                        android:ems="10"
                        android:hint="username"
                        android:digits="abcdefghijklmnopqrstuvwxyz0123456789.-_"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_newpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ellipsize="end"
                        android:ems="10"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_retypenewpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ellipsize="end"
                        android:ems="10"
                        android:hint="retype password"
                        android:inputType="textPassword"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:textSize="18dp" />

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/but_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/xml_button_gray"
                android:height="45dp"
                android:minHeight="45dp"
                android:minWidth="100dp"
                android:text="save"
                android:textColor="@color/mobuzz_gray"
                android:textSize="18dp"
                android:width="100dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>